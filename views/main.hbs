<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Food Page</title>
  </head>
  <body>
    <!-- INICIO SECCION NAV -->
    <section class="navbar">
      <div class="contenedor">
        <div class="logo">
          <img src="images/logo.png" alt="Logo" class="img-responsive" />
        </div>
        <div class="menu texto-derecha">
          <ul>
            <li><a href="#">INICIO</a></li>
            <li><a href="#">CONÓCENOS</a></li>
            <li><a href="#">PLATOS</a></li>
            <li><a href="#">CONTÁCTANOS</a></li>
          </ul>
        </div>
        <div class="limpiar"></div>
      </div>
    </section>
    <!-- FIN SECCION NAV -->
    <!-- INICIO SECCIÓN SEARCH -->
    <section class="busqueda texto-centro">
      <div class="contenedor">
        <form action="">
          <input
            type="search"
            name="search"
            class="text-responsive"
            placeholder="Ingresa el plato a buscar"
          />
          <input
            type="button"
            name="submit"
            class="btn btn-principal text-responsive"
            value="Buscar"
          />
        </form>
      </div>
    </section>
    <!-- FIN SECCION SEARCH -->
    <!-- INICIO SECCION CATEGORÍA -->
    <section class="categorias">
      <div class="contenedor">
        <h2 class="texto-centro">Categorías</h2>
        <a href="#">
          <div class="caja-3 contenedor-flotante">
            <img
              src="images/pizza.jpg"
              alt="Pizza"
              class="img-responsive img-redondeado"
            />
            <h3 class="texto-blanco texto-flotante">Pizzas</h3>
          </div>
        </a>
        <a href="#">
          <div class="caja-3 contenedor-flotante">
            <img
              src="images/burguer.jpg"
              alt="Burger"
              class="img-responsive img-redondeado"
            />
            <h3 class="texto-blanco texto-flotante">Burger</h3>
          </div>
        </a>
        <a href="#">
          <div class="caja-3 contenedor-flotante">
            <img
              src="images/empanada.jpg"
              alt="Empanada"
              class="img-responsive img-redondeado"
            />
            <h3 class="texto-blanco texto-flotante">Empanada</h3>
          </div>
        </a>
        <div class="limpiar"></div>
      </div>
    </section>
    <!-- FIN SECCION CATEGORÍA -->
    <!-- INICIO SECCION PLATOS -->
    <section class="menu-platos">
      <div class="contenedor">
        <h2 class="texto-centro">Nuestros Platos</h2>
        <!-- HAWAYANA -->
        <div class="menu-platos-item">
          <div class="img-menu">
            <img
              src="images/menu-pizza.jpg"
              alt="Pizza Hawayana"
              class="img-responsive img-redondeado"
            />
          </div>
          <div class="desc-menu">
            <h4>Pizza Hawayana</h4>
            <p class="precio-plato">$7.50</p>
            <p class="desc-plato">Lorem ipsum dolor sit amet consectetur.</p>
            <a href="#" class="btn btn-principal">Ordenar</a>
          </div>
        </div>
        <!-- Triple Burguer -->
        <div class="menu-platos-item">
          <div class="img-menu">
            <img
              src="images/menu-burger.jpg"
              alt="Triple Burger"
              class="img-responsive img-redondeado"
            />
          </div>
          <div class="desc-menu">
            <h4>Triple Burger</h4>
            <p class="precio-plato">$8.50</p>
            <p class="desc-plato">Lorem ipsum dolor sit amet consectetur.</p>
            <a href="#" class="btn btn-principal">Ordenar</a>
          </div>
        </div>

        <div class="menu-platos-item">
          <div class="img-menu">
            <img
              src="images/menu-pops.jpg"
              alt="Cheesy Pops"
              class="img-responsive img-redondeado"
            />
          </div>
          <div class="desc-menu">
            <h4>Cheesy Pops</h4>
            <p class="precio-plato">$10.50</p>
            <p class="desc-plato">Lorem ipsum dolor sit amet consectetur.</p>
            <a href="#" class="btn btn-principal">Ordenar</a>
          </div>
        </div>
        <div class="menu-platos-item">
          <div class="img-menu">
            <img
              src="images/menu-empanada.jpg"
              alt="Empanadas"
              class="img-responsive img-redondeado"
            />
          </div>
          <div class="desc-menu">
            <h4>Cheesy Patty</h4>
            <p class="precio-plato">$2.50</p>
            <p class="desc-plato">Lorem ipsum dolor sit amet consectetur.</p>
            <a href="#" class="btn btn-principal">Ordenar</a>
          </div>
        </div>
        <div class="menu-platos-item">
          <div class="img-menu">
            <img
              src="images/menu-chorizo.jpg"
              alt="burger"
              class="img-responsive img-redondeado"
            />
          </div>
          <div class="desc-menu">
            <h4>Burger de Chorizo</h4>
            <p class="precio-plato">$4.50</p>
            <p class="desc-plato">Lorem ipsum dolor sit amet consectetur.</p>
            <a href="#" class="btn btn-principal">Ordenar</a>
          </div>
        </div>
        <div class="menu-platos-item">
          <div class="img-menu">
            <img
              src="images/menu-dog.jpg"
              alt="Hot Dog"
              class="img-responsive img-redondeado"
            />
          </div>
          <div class="desc-menu">
            <h4>Hot Dog</h4>
            <p class="precio-plato">$3.75</p>
            <p class="desc-plato">Lorem ipsum dolor sit amet consectetur.</p>
            <a href="#" class="btn btn-principal">Ordenar</a>
          </div>
        </div>
        <div class="limpiar"></div>
      </div>
    </section>
    <!-- FIN SECCION PLATOS -->
    <!-- INICIO REDES SOCIALES -->
    <section class="sociales">
      <div class="contenedor texto-centro">
        <h2>Síguenos en...</h2>
        <ul>
          <li>
            <a href="#"><i class="fab fa-facebook-square fa-3x"></i></a>
          </li>
          <li>
            <a href="#"><i class="fab fa-twitter-square fa-3x"></i></a>
          </li>
          <li>
            <a href="#"><i class="fab fa-instagram-square fa-3x"></i></a>
          </li>
        </ul>
      </div>
    </section>
    <!-- FIN REDES SOCIALES -->
    <!-- INICIO SECCION FOOTER -->
    <section class="footer">
      <div class="contenedor texto-centro">
        <p>
          TODOS LOS DERECHOS RESERVADOS. DISEÑADO POR
          <a href="#">Sebastián Soberón</a>
        </p>
      </div>
    </section>
    <!-- FIN SECCION FOOTER -->
  </body>
</html>
